@import '~common/stylus/variable'
@import '~common/stylus/mixin'
.preview-container
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  background-color rgba(0,0,0,0.7)
  z-index 1000

  .preview-img
    width 100%
    height 100%

    img
      display inline-block
      max-width 100%
      position absolute
      top 50%
      left 0
      transform translateY(-50%)
  
  .preview-count
    width 100%
    height 80px
    line-height 80px
    position fixed
    bottom 0
    left 0
    color #fff
    font-size 32px
    text-align center

  .preview-buttons
    width 100%
    height 100%
    position absolute
    top 0
    left 0

    .pre-button
      width 50%
      height 100%
      position absolute
      top 0
      left 0
      background url(http://static.guobaoyoo.com/img/naonao/previous.png) no-repeat 25% center
      background-size 80px 80px
      opacity 0.6
    
    .next-button
      width 50%
      height 100%
      position absolute
      top 0
      right 0
      background url(http://static.guobaoyoo.com/img/naonao/previous.png) no-repeat 25% center
      background-size 80px 80px
      opacity 0.6
      transform rotate(180deg)

    .close-button
      color #fff
      position absolute
      top 30px
      right 30px
      border-radius 8px 
      color #fff
      font-size 28px
      padding 10px