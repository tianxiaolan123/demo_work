@import '~common/stylus/variable'
@import '~common/stylus/mixin'
.container
  width 100%
  height 100%
  background url(http://static.guobaoyoo.com/img/naonao/bg.png) repeat center top
  background-size contain
  position relative
  overflow hidden
  display flex
  flex-direction row
  align-items center
  justify-content center

  .chimes
    width 283px
    height 461px
    background url(http://static.guobaoyoo.com/img/naonao/chimes.png) no-repeat center center
    background-size contain
    position absolute
    top 0
    left 0

  .flower
    width 388px
    height 338px
    background url(http://static.guobaoyoo.com/img/naonao/flower.png) no-repeat center center
    background-size contain
    position absolute
    top 0
    right 0

  .house
    width 422px
    height 571px
    background url(http://static.guobaoyoo.com/img/naonao/house.png) no-repeat center center
    background-size contain
    position absolute
    bottom 0
    right 0

  .main
    height 531px
    position relative
    z-index 3
    .cat
      width 225px
      height 266px
      background url(http://static.guobaoyoo.com/img/naonao/cat.png) no-repeat center center
      background-size contain

    .avatar
      width 365px
      height 350px
      background url(http://static.guobaoyoo.com/img/naonao/avatar.png) no-repeat center center
      background-size contain
      margin-top 0

    .verse
    .start-btn
      width 240px
      height 151px
      background url(http://static.guobaoyoo.com/img/naonao/verse.png) no-repeat center center
      background-size contain
      margin 30px auto 0 auto

    .start-btn
      background url(http://static.guobaoyoo.com/img/naonao/txt-tip.png) no-repeat center center
      background-size contain
